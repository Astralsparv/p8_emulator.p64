pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
	player={
		x=0,y=0,sp=1
	}
end

function _update()
	if (btn(0)) player.x-=1
	if (btn(1)) player.x+=1
	if (btn(2)) player.y-=1
	if (btn(3)) player.y+=1
end

function _draw()
	cls()
	spr(player.sp,player.x,player.y)
end
