--[[pod,author="Astralsparv",modified="2025-12-22 01:34:25",notes="Test for stat()\nShows all stats (inf) 0..124 exist\nin Pico-8.        Needs more work.\n          (cleaning and show type)",title="Stat",version="1.0"]]pico-8 cartridge // http://www.pico-8.com
version 43
__lua__
cx,cy=0,0

function _init()
	
end

function _update()
	local amplifier=1
	if (btn(4)) amplifier*=2
	if (btn(5)) amplifier*=2
	if (btn(2)) cy-=1*3*amplifier
	if (btn(3)) cy+=1*3*amplifier
	if (btn(0)) cx-=2*amplifier
	if (btn(1)) cx+=2*amplifier
end

function _draw()
	cls()
	camera(cx,0)
	local x,y=0,0
	for i=flr(cy/6), flr(cy/6)+62 do
		local bumped=false
		local s=i.."="..tostr(stat(i))
		local xx=print(s,x+128,y,0)-x
		color(7)
		if (i>124) color(6)
		if (xx-128>128) x=0 color(5) bumped=true y+=6
		print(s,x,y)
		if (not bumped) then
			x+=48 --arbritrary amount
		else
			y+=6
		end
		if (x>128) x=0 y+=6
	end
end
